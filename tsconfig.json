{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "ES6", "ESNext", "DOM.Iterable"],
    "types": ["node", "jest"],
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "module": "ESNext",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["module/**/*", "buildScripts/**/*"],
  "exclude": ["node_modules"]
}
